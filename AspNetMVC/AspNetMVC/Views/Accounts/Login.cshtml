@model AspNetMVC.Models.LoginMyViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_NoNavLayout.cshtml";
}

@section styles{
    @*<link href="~/Content/metro-bootstrap.min.css" rel="stylesheet" />*@
    <link href="~/Content/Cgmh/GoogleLogin.css" rel="stylesheet" />
}


@{ Html.EnableClientValidation(); }

@using (Html.BeginForm("Login", "Accounts", FormMethod.Post, new { @class = "form-signin", id = "Login-Form" }))
{
    @Html.AntiForgeryToken()
    <div class="text-center">
        @ViewBag.Time2;
        <h2 class="form-signin-heading">登入</h2>
        @*<p>請使用本院 HIS 的帳號與密碼</p>*@
        @*<img data-src="holder.js/140x140" src="http://s.gravatar.com/avatar/43a5669f2e4d2342701ed560d453a0dd?s=140" class="img-circle">*@
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "使用者帳號" })
        @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "text-danger" })

        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "密碼" })
        @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })

        @Html.ValidationSummary(true, "登入失敗", new { @class = "text-danger", role = "alert" })
        <div class="checkbox pull-left">
            <label>
                @Html.CheckBoxFor(m => m.RememberMe, new { id = "CheckBox-RememberMe" })

                @Html.HiddenFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
            </label>
        </div>
        @*<a href="#" class="pull-right help">Need help? </a><span class="clearfix"></span>*@
        <input type="submit" value="登入" class="btn btn-lg btn-primary btn-block" />
    </div>
}
