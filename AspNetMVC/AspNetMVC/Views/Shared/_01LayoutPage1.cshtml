<!DOCTYPE html>

<html ng-app="spa">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/content/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/AgnularJs")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("heads", required: false)

    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
</head>
<body role="document">
    @RenderSection("loader", required: false)
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <a class="navbar-brand">@ViewBag.Title</a>
                </div>
                <nav class="collapse navbar-collapse bs-navbar-collapse">
                    <ul class="nav navbar-nav">
                        @* <li>
                                <a href="../getting-started/">Getting started</a>
                            </li>*@
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        @{ Html.RenderPartial("_LoginStatusPartial"); }
                        @*@RenderSection("loginStatus", required: false)*@
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    @*<div class="jumbotron">
            <div class="container">
                @RenderSection("jumbotron", required: false)
            </div>
        </div>*@
    <div class="container">
        <div class="starter-template">
            @RenderSection("jumbotron", required: false)
        </div>
    </div>
    <div class="container theme-showcase" role="main">
        <div class="page-header">
            @RenderBody()
        </div>
        <footer class="footer">
            @RenderSection("footer", required: false)
            @*<p>© 長庚醫療財團法人 2015</p>*@
        </footer>
    </div>

    @RenderSection("scripts", required: false)

</body>
</html>
